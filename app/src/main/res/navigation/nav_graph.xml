<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.mikeschvedov.weatherappginifinalexam.ui.home.HomeFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/map_fragment" />
    </fragment>
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.mikeschvedov.weatherappginifinalexam.ui.maps.MapFragment"
        android:label="Other Locations"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/main_fragment" />
    </fragment>
</navigation>